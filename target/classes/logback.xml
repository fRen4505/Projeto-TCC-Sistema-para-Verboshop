<configuration debug="true">

    <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator class="ch.qos.logback.classic.sift.MDCBasedDiscriminator">
            <key>email</key>
            <defaultValue>unknown</defaultValue>
        </discriminator>

        
 	    <sift>
            <appender name="EMAIL-${email}" class="ch.qos.logback.classic.net.SMTPAppender">
               
                 
                <smtpHost> INSERIR HOST</smtpHost>
                <smtpPort> INSERIR PORT</smtpPort>

                <username> INSERIR USUARIO DO HOST</username>
                <password> SENHA DE USUARIO</password>

                <STARTTLS>true</STARTTLS>
            
                <to>${email}</to>
                <from> ENDEREÇO DADO PELO HOST</from>
                <subject>Relatório Estoque [%date]</subject>

                <layout class="projeto.System.Models.RelatorioLayout" />
            </appender>
        </sift>
        
    </appender>

    <root level="INFO">
        <appender-ref ref="SIFT" />
    </root>

    <logger name="projeto" level="info" />

</configuration>
